{% extends session.role == "admin" and user.role != "admin"
    ? 'layout.html.twig'
    : 'layoutp.html.twig' %}

{% block content %}
    <h2 class="uk-text-center">Modification du profil
    {% if session.role == "admin" and user.role != "admin" %}
        de {{ user.firstname ~" "~ user.lastname }}
    {% endif %}</h2>
    {% if session['role'] != 'admin' %}
    <div class="uk-text-center uk-text-danger uk-text-bolder">
        {{ message }}
    </div>
    {% endif %}
    <form class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large" method="post">
        <div class="uk-text-center"> Tous les champs sont facultatifs</div>
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: user"></span>
                <input name="firstname" class="uk-input uk-form-large" type="text" value="{{ user.firstname }}">
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: user"></span>
                <input name="lastname" class="uk-input uk-form-large" type="text" value="{{ user.lastname }}">
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: mail"></span>
                <input name="mail" class="uk-input uk-form-large" type="text" value="{{ user.mail }}">
            </div>
        </div>
        {% if session['role'] != 'admin' %}
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: lock"></span>
                <input name="password" class="uk-input uk-form-large" type="password" placeholder="********">
            </div>
            <div>
                <div class="uk-text-small uk-text-center">6 caract√®res minimum incluant une majuscule et un chiffre</div>
            </div>
        </div>
        {% endif %}
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: phone"></span>
                <input name="tel" class="uk-input uk-form-large" type="text" value="{{ user.num_Tel }}">
            </div>
        </div>
        <div class="uk-margin">
            <button class="uk-button uk-button-primary uk-button-large uk-width-1-1" type="submit" value="valider">valider</button>
        </div>
        <div class="uk-margin">
            <a href="{% if session["role"] != "admin" or user.role == "admin" %}/User/show/{{ user.id }}{% else %}/User/index{% endif %}" class="uk-button uk-button-secondary uk-button-large uk-width-1-1" >Annuler</a>
        </div>
    </form>
{% endblock %}

