{% extends session.role == "admin" and user.role != "admin"
    ? 'layout.html.twig'
    : 'layoutp.html.twig' %}

{% block content %}
    <h2 class="uk-text-center">Modification du profil</h2>
    <div class="uk-alert uk-text-center uk-text-danger uk-text-bolder">
        {{ message }}
    </div>
    <form class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large" method="post">
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: user"></span>
                <input name="firstname" class="uk-input uk-form-large" type="text" value="{{ user.firstname }}" >
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: user"></span>
                <input name="lastname" class="uk-input uk-form-large" type="text" value="{{ user.lastname }}">
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: mail"></span>
                <input name="mail" class="uk-input uk-form-large" type="text" value="{{ user.mail }}">
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: lock"></span>
                <input name="password" class="uk-input uk-form-large" type="password" placeholder="********" value="{{ user.password }}">
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: phone"></span>
                <input name="tel" class="uk-input uk-form-large" type="text" value="{{ user.num_Tel }}">
            </div>
        </div>
        <div class="uk-margin">
            <button class="uk-button uk-button-primary uk-button-large uk-width-1-1" type="submit" value="valider">valider</button>
        </div>
    </form>
{% endblock %}

