    <div class="uk-container uk-margin uk-width-1-2@m">
        <h2>Créer un bouquet</h2>

        <h3>Items disponibles</h3>
        <table class="uk-table uk-table-striped uk-table-hover">
            <tr>
                <th>id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Couleur</th>
                <th>Prix</th>
                <th>Ajouter</th>
            </tr>
            {% for unit in units %}
                <tr>
                    <td>{{ unit.id }}</td>
                    <td>{{ unit.nom }}</td>
                    <td>{{ unit.type }}</td>
                    <td>{{ unit.couleur }}</td>
                    <td>{{ unit.prix }}€</td>
                    <td><a href="../add/{{ unit.id }}" uk-icon="icon: plus-circle"></a></td>
                </tr>
            {% endfor %}
        </table>
    </div>