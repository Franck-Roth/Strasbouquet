{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} Créer un bouquet personnalisé
{% endblock %}

{% block content %}
    <div class="uk-container">
        <h1>Bouquets personnalisés</h1>
        <ul>
            {% for concept in concepts %}
                <li>{{ concept.id }}</li>
            {% endfor %}
        </ul>
        <form action="create/{{ concept.id }}" method="post">
            <input type="hidden" name="id_user" value="1">
            <input type="hidden" name="id_panier" value="1">
            <button type="submit" name="create">Créer</button>
        </form>
    </div>
{% endblock %}