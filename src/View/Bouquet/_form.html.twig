<form method="post">
    <input type="hidden" value="{{ bouquet.id }}" name="id">
    <label for="nom">Nom:</label>
    <input type="text" value="{{ bouquet.nom }}" name="nom">
    <label for="prix">Prix:</label>
    <input type="text" value="{{ bouquet.prix }}" name="prix">
    <label for="description">Description:</label>
    <input type="text" value="{{ bouquet.description }}" name="description">
    <label for="saisonnier">Saisonnier</label>
    <input type="text" value="{{ bouquet.saisonnier }}" name="saisonnier">
    <input type="submit" value="Valider">
</form>
