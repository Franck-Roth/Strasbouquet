{% extends 'layoutp.html.twig' %}
{% block title %}
    {{ parent()}} Accueil
{% endblock %}


{% block content %}

    <table class="uk-table uk-table-divider uk-box-shadow-large">
        <thead>
        <tr>
            <th>Nom du bouquet</th>
            <th>Prix Total</th>
            <td>Quantit√©</td>
        </tr>
        </thead>
        <tbody>
        {% for bouquet in panier %}
            <tr>
                <td>{{ bouquet.nom }}</td>
                <td>{% set priceB = bouquet.prix  * bouquet.quantite  %} {{ priceB }}</td>
                <td class="uk-inline">
                    <a href="/BouquetCat/delete/{{ unit.id_catalogue_unitaire }}"><p uk-icon="icon: minus-circle"></p></a>
                    <p>{{ bouquet.quantite }}</p>
                    <a href="/BouquetCat/add/{{ unit.id_catalogue_unitaire }}"><span uk-icon="icon: plus-circle"></span></a>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <h3>Total: {{ price.total }} </h3>


    <button><a href="/Cart/showBouquet">RETOUR</a></button>

{% endblock %}