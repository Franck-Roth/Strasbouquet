{% extends 'layoutp.html.twig' %}
{% block title %}
    {{ parent()}} Accueil
{% endblock %}


{% block content %}

    <table class="uk-table uk-table-divider uk-box-shadow-large">
        <thead>
        <tr>
            <th>Nom du bouquet</th>
            <th>Prix Total</th>
            <td>Quantit√©</td>
        </tr>
        </thead>
        <tbody>
        {% for bouquet in panier %}
            <tr>
                <td>{{ bouquet.nom }}</td>
                <td>{% set priceB = bouquet.prix  * bouquet.quantite  %} {{ priceB }}</td>
                <td> <a href="/cart/addBouquetCart/{{ bouquet.id }}"><span uk-icon="plus-circle"></span></a>
                    {{ bouquet.quantite }}
                    <a href="/cart/delete/{{ bouquet.id }} "><span uk-icon="minus-circle"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h3>Total: {{ price.total }} </h3>


    <button><a href="/Cart/showBouquet">RETOUR</a></button>

{% endblock %}